{
  "name": "npm-package-search",
  "version": "1.0.0",
  "description": "To use, type 'npm' plus your search term into the url bar.",
  "main": "extension/background.js",
  "repository": "https://github.com/clarkbw/npm-package-search.git",
  "bugs": {
    "url" : "https://github.com/clarkbw/npm-package-search/issues"
  },
  "homepage": "https://github.com/clarkbw/npm-package-search",
  "author": "Bryan Clark <clarkbw@gmail.com> (http://twitter.com/clarkbw)",
  "license": "MPL-2.0",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0-beta.1",
    "babel-preset-env": "^1.2.1",
    "babel-preset-es2015": "^6.24.0",
    "gh-release": "^2.2.1",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "jest-fetch-mock": "^1.0.8",
    "lint-staged": "^3.4.0",
    "prettier": "^0.22.0",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "build": "webpack && ./bin/generate-manifest && yarn zip",
    "build:watch": "webpack --watch",
    "test": "jest",
    "coverage": "yarn test -- --coverage",
    "prettier": "prettier --write --single-quote --print-width 80 ./src/**/*.js ./__tests__/**/*.js ./__setups__/**/*.js ./bin/*",
    "zip": "(cd extension && zip -r ../extension.zip .)"
  },
  "manifest": {
    "name": "NPM Package Search",
    "short_name": "NPM Search",
    "applications": {
      "gecko": {
        "strict_min_version": "52.0a1"
      }
    },
    "icons": {
      "16": "icons/npm-16.png",
      "64": "icons/npm-64.png"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "omnibox": { "keyword" : "npm" },
    "manifest_version": 2,
    "permissions": [
      "https://registry.npmjs.org/"
    ]
  },
  "lint-staged": {
    "src/*.js": [
      "prettier --write --single-quote --print-width 80",
      "git add"
    ],
    "__tests__/**/*.js": [
      "prettier --write --single-quote --print-width 80",
      "git add"
    ],
    "__setups__/**/*.js": [
      "prettier --write --single-quote --print-width 80",
      "git add"
    ],
    "webpack.config.js": [
      "prettier --write --single-quote --print-width 80",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "./__setups__/chrome.js",
      "./__setups__/fetch.js"
    ],
    "coverageDirectory": "./coverage/",
    "bail": true,
    "globals": {
      "chrome": {
        "tabs": {},
        "omnibox": {
          "onInputChanged": {},
          "onInputEntered": {}
        }
      }
    }
  }
}
